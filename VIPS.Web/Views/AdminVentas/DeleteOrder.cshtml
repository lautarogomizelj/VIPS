@{
    Layout = "_AdminVentasLayout";
    string lang = User.FindFirst("Lang")?.Value ?? "es";
}

<form asp-action="DeleteOrder" asp-controller="AdminVentas" method="post" class="CRUD">
    <h3>@(lang == "es" ? "Eliminar pedido" : "Delet Order")</h3>
    @Html.AntiForgeryToken()

    @if (TempData["ErrorMessageDeleteOrder"] != null)
   {
    <div class="alert alert-danger">
        <p class="error">@TempData["ErrorMessageDeleteOrder"]</p>
    </div>
   }

    @if (TempData["SuccessDeleteOrderMessage"] != null)
{
    <div class="alert alert-danger">
        <p class="exito">@TempData["SuccessDeleteOrderMessage"]</p>
    </div>
   }

    <input type="hidden" value="@ViewBag.idPedido" name="idPedido" />

    <div class="row">
        <label for="eleccion">
            @(lang == "es"
                ? "Desea eliminar el pedido con id: " + ViewBag.idPedido
                : "You wish to delete order with id: " + ViewBag.idPedido)
        </label>

        <select name="eleccion">
            <option value="si">Si</option>
            <option value="no">No</option>
        </select>
    </div>

    <button type="submit" class="btn-principal">@((lang == "es") ? "Confirmar cambios" : "Confirm Changes")</button>
    <a class="restablecer" asp-controller="AdminVentas" asp-action="OrderManagement">@((lang == "es") ? "Volver" : "Back")</a>



</form>
