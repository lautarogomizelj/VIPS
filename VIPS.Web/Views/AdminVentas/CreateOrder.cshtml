@model OrderModel

@{
    Layout = "_AdminVentasLayout";
    string lang = User.FindFirst("Lang")?.Value ?? "es";
}


<form asp-controller="AdminVentas" asp-action="CreateOrder" method="post" class="CRUD">
    <h3>@(lang == "es" ? "Agregar Nuevo Pedido" : "Add New Order")</h3>
    @Html.AntiForgeryToken()

    @if (TempData["ErrorMessageCreateOrder"] != null)
    {
    <div class="alert alert-danger">
        <p class="error">@TempData["ErrorMessageCreateOrder"]</p>
    </div>
    }

    @if (TempData["MensajeExitoFormularioCrearPedido"] != null)
{
    <div class="alert alert-danger">
        <p class="exito">@TempData["MensajeExitoFormularioCrearPedido"]</p>
    </div>
}



    <!--aca va la parte del dni existente-->

    <div class="row">
        <label for="idCliente">@((lang == "es") ? "Cliente *" : "Client *")</label>

        <select id="idCliente" name="idCliente" asp-items="ViewBag.Clientes" required>
            <option value="">@(lang == "es" ? "Seleccione un cliente" : "Select a client")</option>
        </select>

        <span class="field-validation-error" data-valmsg-for="Cliente" data-valmsg-replace="true"></span>
    </div>



    <!-- Dimensiones -->

    <div class="row">
        <label for="Ancho">@((lang == "es") ? "Ancho (cm) *" : "Width (cm)  *")</label>
        <input type="text" id="Nombre" name="Ancho" required>
    </div>

    <div class="row">
        <label for="Largo">@((lang == "es") ? "Largo (cm) *" : "Long (cm)*")</label>
        <input type="text" id="Largo" name="Largo" required>
    </div>

    <div class="row">
        <label for="Alto">@((lang == "es") ? "Alto (cm) *" : "Height (cm) *")</label>
        <input type="text" id="Alto" name="Alto" required>
    </div>

    <div class="row">
        <label for="Peso">@((lang == "es") ? "Peso (gr) *" : "Weight (gr) *")</label>
        <input type="text" id="Peso" name="Peso" required>
    </div>




    <!-- Domicilio -->

    <div class="row">
        <label for="DomicilioEntrega">@((lang == "es") ? "Domicilio de entrega *" : "Order address *")</label>
        <input type="text" id="DomicilioEntrega" name="DomicilioEntrega" required placeholder="Ej: Luis Maria Campos 1149">
    </div>

    <div class="row">
        <label for="Ciudad">@((lang == "es") ? "Ciudad *" : "City *")</label>
        <input type="text" id="Ciudad" name="Ciudad" required>
    </div>

    <div class="row">
        <label for="Provincia">@((lang == "es") ? "Provincia *" : "State *")</label>
        <input type="text" id="Provincia" name="Provincia" required>
    </div>



    <button type="submit" class="btn-principal">@(lang == "es" ? "Crear Pedido" : "Create Order")</button>

    <a class="restablecer" asp-controller="AdminVentas" asp-action="OrderManagement">@((lang == "es") ? "Volver" : "Back")</a>
</form>

