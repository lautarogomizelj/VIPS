@model string

@{
    Layout = "_LoginLayout";
    ViewData["title"] = "Recuperar contraseña";
}


<section>
    <h2>Restablecer Contraseña</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            <p style="color:red;">@TempData["ErrorMessage"]</p>
        </div>
    }

    <form asp-controller="Auth" asp-action="ResetPassword" method="post">
        @Html.AntiForgeryToken()

        <!-- Token oculto -->
        <input type="hidden" name="token" value="@Model" />

        <div class="form-group">
            <label for="nuevaPassword">Nueva contraseña</label>
            <input type="password" class="form-control" id="nuevaPassword" name="nuevaPassword" required />
        </div>

        <div class="form-group">
            <label for="confirmarPassword">Confirmar contraseña</label>
            <input type="password" class="form-control" id="confirmarPassword" name="confirmarPassword" required />
        </div>

        <button type="submit" class="btn btn-primary">Cambiar Contraseña</button>

        <a asp-controller="Auth" asp-action="Login" class="btn btn-secondary">Volver al Inicio de Sesión</a>
    </form>
</section>