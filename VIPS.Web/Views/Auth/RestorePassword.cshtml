@{
    Layout = "_LoginLayout";
    ViewData["title"] = "Recuperar contraseña";
}


<div class="login-card">
    <h2 class="login-title">Recuperar contraseñaa</h2>
    <p class="login-subtitle">Ingresa tu correo electrónico y te enviaremos un enlace para restablecer tu contraseña</p>

    <form method="post" asp-controller="Auth" asp-action="RestorePassword">

        <div class="form-group">
            <label for="username" class="form-label">Correo electronico</label>
            <input type="email"
                   id="correo"
                   name="correo"
                   class="form-input"
                   required
                   maxlength="100"
                   placeholder="ejemplo@correo.com">
        </div>

        <button type="submit" class="btn-principal" id="loginBtn">
            <div class="loading"></div>
            <span>Enviar enlace</span>
        </button>

        @if (TempData["Message"] != null)
        {
        <div class="success-message" id="errorMessage">
            <span>@TempData["Message"]</span>
        </div>
        }

        <a asp-controller="Auth" asp-action="Login" class="forgot-password" style="text-align:center; padding-top:20px">Volver a inicio de sesion</a>



    </form>

</div>
