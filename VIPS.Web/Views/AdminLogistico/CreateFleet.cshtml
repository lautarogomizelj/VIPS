@model ClienteModel

@{
    Layout = "_AdminLogisticoLayout";
    string lang = User.FindFirst("Lang")?.Value ?? "es";
}


<form asp-controller="AdminLogistico" asp-action="CreateFleet" method="post" class="CRUD">
    <h3>@(lang == "es" ? "Agregar Nuevo Vehiculo" : "Add New Fleet")</h3>
    @Html.AntiForgeryToken()

    @if (TempData["ErrorMessageCreateFleet"] != null)
    {
    <div class="alert alert-danger">
        <p class="error">@TempData["ErrorMessageCreateFleet"]</p>
    </div>
    }

    @if (TempData["MensajeExitoFormularioCrearVehiculo"] != null)
{
    <div class="alert alert-danger">
        <p class="exito">@TempData["MensajeExitoFormularioCrearVehiculo"]</p>
    </div>
}


    <div class="row">
        <label for="Patente">@((lang == "es") ? "Patente  *" : "Vehicle ID *")</label>
        <input type="text" id="Patente" name="Patente" required>
    </div>

    <!-- Dimensiones -->


    <div class="row">
        <label for="Ancho">@((lang == "es") ? "Ancho (m) *" : "Width (m)  *")</label>
        <input type="number" id="Nombre" name="Ancho" required>
    </div>

    <div class="row">
        <label for="Largo">@((lang == "es") ? "Largo (m) *" : "Long (m)*")</label>
        <input type="number" id="Largo" name="Largo" required>
    </div>

    <div class="row">
        <label for="Alto">@((lang == "es") ? "Alto (m) *" : "Height (m) *")</label>
        <input type="number" id="Alto" name="Alto" required>
    </div>

    <!-- Capaicdad de carga max -->

    <div class="row">
        <label for="CapacidadPeso">@((lang == "es") ? "CapacidadPeso (kg) *" : "Max weight (kg)*")</label>
        <input type="number" id="CapacidadPeso" name="CapacidadPeso" required>
    </div>

    <div class="row">
        <label for="CapacidadVolumen">@((lang == "es") ? "CapacidadVolumen (m3) *" : "Max volume (m3) *")</label>
        <input type="number" id="CapacidadVolumen" name="CapacidadVolumen" required>
    </div>


    <!--Estado (inactivo o activo)-->

    <div class="row">
        <label for="Estado">@((lang == "es") ? "Inidique el estado (activo/inactivo) *" : "Select vehicle state (active/inactive) *")</label>

        <select name="Estado">
            <option value="">@(lang == "es" ? "Indique el estado" : "Select vehicle state")</option>
            <option value="0">@(lang == "es" ? "Inactivo" : "Inactive")</option>
            <option value="1">@(lang == "es" ? "Activo" : "Active")</option>

        </select>

    </div>


    <button type="submit" class="btn-principal">@(lang == "es" ? "Crear vehiculo" : "Create Fleet")</button>
    <a class="restablecer" asp-controller="AdminLogistico" asp-action="FleetManagement">@((lang == "es") ? "Volver" : "Back")</a>




</form>

